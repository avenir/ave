  .delivery-options-container
    = field_set_tag t("listings.form.price.delivery"), class: "delivery-title" do
      .delivery-row-low
        .delivery-checkbox
          = check_box_tag "listing[delivery_methods][]", "shipping", shipping_enabled, id: "shipping-checkbox", class: "delivery-method-checkbox required"
        .delivery-left-field
          = label_tag "shipping-checkbox", t("listings.form.price.shipping"), class: "shipping-options-label"
      .js-shipping-price-container
        .delivery-row-tall
          .delivery-left-field.shipping-price-container.shipping-price-default
            .delivery-row
              #clonning.delivery-label-cont
                = render partial: "listings/form/shippings", locals: {form: form}
                -# = form.text_field :shipping_price, class: "price-field delivery-price-field", maxlength: 10, placeholder: 0, value: shipping_price
            #clone.delivery-col ADD
            .delivery-row1
            -# .delivery-row
            -#   .delivery-label-cont
            -#     = form.label :shipping_price, "Shipping Price Local", class: "shipping-options-label"
            -#   .delivery-input-cont
            -#     .delivery-currency
            -#       = render partial: "listings/form/currency_selector", locals: {form: form}
            -#     = form.text_field :shipping_price, class: "price-field delivery-price-field", maxlength: 10, placeholder: 0, value: shipping_price
            -#     = form.button "Add", value: "submit"
         
          .delivery-row-tall
            .delivery-left-field.shipping-price-container.js-shipping-price-additional{class: always_show_additional_shipping_price ? "" : "hidden"}
              .delivery-row
                .delivery-label-cont
                  = form.label :shipping_price_additional, t("listings.form.price.shipping_price_additional"), class: "shipping-options-label"
                .delivery-input-cont
                  .delivery-currency
                    = render partial: "listings/form/currency_selector", locals: {form: form}
                  = form.text_field :shipping_price_additional, class: "price-field delivery-price-field", maxlength: 10, placeholder: 0, value: shipping_price_additional
      .delivery-row-low
        .delivery-checkbox
          = check_box_tag "listing[delivery_methods][]", "pickup", pickup_enabled, id: "pickup-checkbox", class: "delivery-method-checkbox required"
        .delivery-left-field
          = label_tag "pickup-checkbox", t("listings.form.price.pickup"), class: "shipping-options-label"
:javascript
  $(document).ready(function(){
    var oldId = 0;
    var newId = 0;

   $("#clone").click(function(){
      newId = newId + 1;
      var tempDOM = $("#clonning").clone();
      var fieldNamePrefix = "listing_shippings_attributes_";
     
      tempDOM.find('#' + fieldNamePrefix + oldId + '_country').attr('name', 'listing[shippings_attributes][' + newId + '][country]');
      
      tempDOM.find('#' + fieldNamePrefix + oldId + '_country').attr('id', fieldNamePrefix + newId + '_country');
      
      tempDOM.find('#' + fieldNamePrefix + oldId + '_shipping_rate').attr('name', 'listing[shippings_attributes][' + newId + '][shipping_rate]');
      
      tempDOM.find('#' + fieldNamePrefix + oldId + '_shipping_rate').attr('id', fieldNamePrefix + newId + '_shipping_rate');

      $('.delivery-row1').append(tempDOM);
    
   });
  });
