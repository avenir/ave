%tr
  %td{:align => "left"}
    %font{body_font}
      = "This is your confirmation of purchase #{Time.now.getutc}."
      = "#{payer_full_name} has purchased #{listing_title} for #{payment_total}"
      = "Here is a receipt of the payment."

%tr
  %td{:align => "left", :style => "padding: 20px 0;"}
    %table{:cellpadding => 5, :cellspacing => 0, :style => "border-collapse: collapse; width: 100%"}
      %tbody
        %tr
          %td{:width => "200"}
            %b= t("emails.braintree_new_payment.product")
          %td
            %b= listing_title
        - if duration.present? || listing_quantity > 1
          %tr
            %td{:width => "250"}
              = price_per_unit_title
            %td
              = listing_price
        - if duration.present?
          %tr
            %td{:width => "250"}
              = t("emails.receipt_to_payer.duration")
            %td
              = duration
        - elsif listing_quantity > 1
          %tr
            %td{:width => "250"}
              = quantity_selector_label || t("emails.new_payment.quantity")
            %td
              = listing_quantity
        %tr{:style => "border-top: 1px solid black"}
          %td
            %b= t("emails.braintree_new_payment.price_payer_paid", :payer_full_name => payer_given_name)
          %td
            %b= subtotal
        %tr
          %td
            = t("emails.braintree_new_payment.service_fee")
          %td= "#{payment_service_fee}"

        - if shipping_total.present?
          %tr
            %td
              = t("emails.paypal_new_payment.shipping_total")
            %td= shipping_total

        - if paypal_gateway_fee.present?
          %tr
            %td
              = t("emails.paypal_new_payment.paypal_gateway_fee")
            %td= "#{paypal_gateway_fee}"

        %tr{:style => "border-top: 1px solid black"}
          %td
            %b= t("emails.braintree_new_payment.you_will_get")
          %td
            %b= payment_seller_gets

= render :partial => "person_mailer/action_button", :locals => { :text => t("emails.conversation_status_changed.view_thread"), :url => conversation_url}
